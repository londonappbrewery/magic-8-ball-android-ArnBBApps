<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#26ade0"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/askButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="23dp"
        android:background="#3F51B5"
        android:text="Ask"
        android:textColor="@android:color/background_light"
        android:textSize="20sp"
        tools:ignore="HardCodedText"
        android:layout_alignLeft="@+id/Image_eightBall"
        android:layout_alignStart="@+id/Image_eightBall"
        android:layout_alignRight="@+id/Image_eightBall"
        android:layout_alignEnd="@+id/Image_eightBall"/>

    <ImageView
        android:id="@+id/Image_eightBall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/app_name"
        app:srcCompat="@drawable/ball1"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="31dp"
        android:background="?attr/colorPrimary"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:text='"Make every decisions easier"'
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:ignore="HardCodedText"/>

</RelativeLayout>
